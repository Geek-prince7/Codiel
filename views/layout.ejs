            <h5><%= flash.success %></h5>
        <% } %> -->
        <%- body %>
        <%- include('_footer'); %>
        <script>
            '<% if(flash.success && flash.success.length>0){ %>'
                new Noty({
                    theme:'relax',
                    text:"<%= flash.success %>",
                    type:'success',
                    layout:'topRight',
                    timeout:2000

                }).show()
            '<% } %>'

            '<% if(flash.error && flash.error.length>0){ %>'
                new Noty({
                    theme:'relax',
                    text:"<%= flash.error %>",
                    type:'error',
                    layout:'topRight',
                    timeout:2000

                }).show()
            '<% } %>'

        </script>
        
        <script src="https://kit.fontawesome.com/74e711aaac.js" crossorigin="anonymous"></script>
        <script type="text/javascript" src="/js/home_posts.js"></script>
        <%- script %>
        
    </body>
